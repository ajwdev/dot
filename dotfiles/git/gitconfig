# vim: ft=gitconfig

[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input

[user]
	name = Andrew Williams
	email = williams.andrew@gmail.com

[alias]
	a = add
	ap = add --patch
	bb = !better-git-branch.sh
	ca = commit --amend -C HEAD
	co = checkout
	cob = checkout -b
	cp = cherry-pick
	d = diff
	dc = diff --cached
	ff = merge --ff-only
	head = rev-parse HEAD
	l = log --oneline
	missing = ls HEAD..main
	new = ls main..HEAD
	poh = push origin HEAD
	pohf = push origin HEAD --force-with-lease
	pot = push origin tag
	r1 = reset HEAD~1
	rbc = rebase --cont
	ri = rebase --interactive
	root = rev-parse --show-toplevel
	st = status
	uncommit = reset --soft HEAD^
	unstage = reset HEAD --
	which-branches-contain = branch -a --contains
	which-tags-contain = name-rev --name-only
	who = shortlog -s --

[url "git@github.com:"]
	insteadOf = https://github.com/

[init]
	defaultBranch = main

[push]
	default = simple

[commit]
	verbose = true

[branch]
	sort = -committerdate

[rebase]
	autosquash = true
	autoStash = true

[rerere]
	enabled = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[includeIf "gitdir:~/src/*netflix*/"]
	path = ~/.gitconfig-work

